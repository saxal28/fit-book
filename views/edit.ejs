<% include /partials/header %>

<style>
    .overlay {
        padding-top:50px;
        background:url(https://hd.unsplash.com/22/brick-wall.JPG);
        background-size:cover;
        opacity: 0.8;
        
    }
    label, h2, h3 {
        color:black;
    }
    .row {
        height:60px;
    }
    
    label {
        font-size:16px;
    }
    
    body {
      background: linear-gradient(to left, #f46b45 , #eea849);
    }
    

</style>


<div class="unpadded-overlay new-form-post">

    <div class="container text-left">
  
    <form method="post" action="/bulletin-board/recipes/<%=recipe._id%>?_method=PUT">
       <div class="container">
  <div class="nutrition-label">    
    <div class="row">
      <h2>Recipe</h2>
      <hr>
    </div>
    <div class="row">
      <label>Title</label>
      <input type="text" class="text-1 pull-right" placeholder="quirky title here"name="recipe[title]" value="<%=recipe.title%>">
      <hr>
    </div>
    <div class="row">
      <label>Image</label>
      <input type="text" class="text-1 pull-right" placeholder="link to image" name="recipe[image]" value="<%=recipe.image%>">
      <hr>
    </div>
    <div class="row">
      <label>Summary</label>
      <input type="text" class="text-1 pull-right" placeholder="one sentence summary" name="recipe[summary]" value="<%=recipe.summary%>">
      <hr>
    </div>
    <div class="row">
      <h3>Nutrition Facts</h3>
      <hr>
    </div>
    <div class="row">
      <label>Calories</label>
      <input type="text" class="number pull-right" placeholder="0" name="recipe[calories]" value="<%=recipe.calories%>">
      <hr>
    </div>
    <div class="row">
      <label>Carbs</label>
      <input type="number" class="number pull-right" placeholder="0"name="recipe[carb]" value="<%=recipe.carb%>">
      <hr>
    </div>
    <div class="row">
      <label>Protein</label>
      <input type="number" class="number pull-right" placeholder="0"name="recipe[protein]" value="<%=recipe.protein%>">
      <hr>
    </div>
    <div class="row">
      <label>Fat</label>
      <input type="number" class="number pull-right" placeholder="0"name="recipe[fat]" value="<%=recipe.fat%>">
      <hr>
    </div>
  </div>
  
<!--   this is a test -->
  <div class="nutrition-label">
    <div class="row">
      <h2>Instructions</h2>
      <hr>
    </div>
    <div class="row">
      <label>Step 1</label>
      <input type="text" class="text-1 pull-right" placeholder="steps here" name="recipe[step1]" value="<%=recipe.step1%>">
      <hr>
    </div>
    <div class="row">
      <label>Step 2</label>
      <input type="text" class="text-1 pull-right" placeholder="steps here" name="recipe[step2]" value="<%=recipe.step2%>">
      <hr>
    </div>
    <div class="row">
      <label>Step 3</label>
      <input type="text" class="text-1 pull-right" placeholder="steps here" name="recipe[step3]" value="<%=recipe.step3%>">
      <hr>
    </div>
    <div class="row">
      <label>Step 4</label>
      <input type="text" class="text-1 pull-right" placeholder="steps here" name="recipe[step4]" value="<%=recipe.step4%>">
      <hr>
    </div>
    <div class="row">
      <label>Step 5</label>
      <input type="text" class="text-1 pull-right" placeholder="steps here" name="recipe[step5]" value="<%=recipe.step5%>">
      <hr>
    </div>
    <div class="row">
      <label>Step 6</label>
      <input type="text" class="text-1 pull-right" placeholder="steps here" name="recipe[step6]" value="<%=recipe.step6%>">
      <hr>
    </div>
    <div class="row">
      <label>Step 7</label>
      <input type="text" class="text-1 pull-right" placeholder="steps here" name="recipe[step7]" value="<%=recipe.step7%>">
      <hr>
    </div>

    </div>
  
  
  
  
</div>
        <button class="ui big inverted button" style="margin-bottom:20px">Edit</button>
        </div>
       
</form>
</div>
</div>

<% include /partials/footer %>