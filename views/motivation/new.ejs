<% include ../partials/header %>

<style>
body {
    background: linear-gradient(to left, #f46b45 , #eea849);
}
</style>

<div class="unpadded-overlay" style="padding-top:8%">

    <div class="container text-left">
    <form method="post" action="/bulletin-board/motivation">
      <div class="row">
                <h1>Create New Motivation</h1>

                <div class="form-group">
                    <label>Title</label>
                        <input type="text" class="form-control" placeholder="title" name="motivation[title]">
                </div>
                
                <div class="form-group">
                    <label>Image</label>
                        <input type="text" class="form-control" placeholder="image url" name="motivation[image]">
                </div>
            
                <div class="row">
                    <label>Tagline</label>
                        <textarea class="form-control" rows="1" placeholder="tagline" name="motivation[summary]"></textarea>
                </div>
                        
                <div class="row">
                    <label>Body</label>
                        <textarea class="form-control" rows="6" placeholder="......" name="motivation[body]"></textarea>
                </div>
            
                <div class="row">
                    <button class="ui big inverted button" style="margin-bottom:20px">Create!</button>
                </div>
        </form>
            
            </div>
            </div>



