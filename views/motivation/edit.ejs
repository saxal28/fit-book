<!--edit motivation page-->

<% include /partials/header %>

<style>
body {
    background: linear-gradient(to left, #f46b45 , #eea849);
}
</style>

<div class="unpadded-overlay" style="padding-top:8%">

    <div class="container text-left">
    <form method="post" action="/bulletin-board/motivation/<%=motivation._id%>?_method=PUT">
      <div class="row">
                <h1>Edit Motivation</h1>

                <div class="form-group">
                    <label>Title</label>
                        <input type="text" class="form-control" value="<%=motivation.title%>" name="motivation[title]">
                </div>
                
                <div class="form-group">
                    <label>Image</label>
                        <input type="text" class="form-control" value="<%=motivation.image%>" name="motivation[image]">
                </div>
            
                <div class="row">
                    <label>Tagline</label>
                        <textarea class="form-control" rows="1" placeholder="tagline" name="motivation[summary]"><%=motivation.summary%></textarea>
                </div>
                        
                <div class="row">
                    <label>Body</label>
                        <textarea class="form-control" rows="6" placeholder="......" name="motivation[body]"><%=motivation.body%></textarea>
                </div>
            
                <div class="row">
                    <button class="ui big inverted button" style="margin-bottom:20px">Edit!</button>
                </div>
        </form>
            
            </div>
            </div>



<% include /partials/footer %>