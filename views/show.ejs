<% include /partials/header %>

<style>
    .index-header {
        background:url(<%=recipe.image%>);
        background-size:cover;
        width:100%;
        height:100%;
    }
    .overlay {
        opacity: .8;
 
         text-shadow: 2px 2px 4px black;
         padding-top: 12%;
    }
    
    
    .btn-row {
        margin-bottom: 40px;
    }
    
    .jumbotron {
        background:url(<%=recipe.image%>);
        background-size:cover;
        background-position:bottom center;
        height: 500px;
        margin-bottom:0;
    }
    
</style>


<div class="container content-container">
    
    <div class="jumbotron">
        
    </div>
        <div class="row text-center ui raised segment" style="background: linear-gradient(to left, #f46b45 , #eea849);">
            <div class="row" style="color:white; border-bottom:1px solid white">
                <h2 class="text-right"><%=recipe.title%></h2>
                <h4 class="text-right"><em>Created by: <strong><%=recipe.author.username%></strong></em></h4>
            </div>
            <div class="col-md-7">
                <div class="jumbotron-content"  style="background:transparent">
                <h2>Nutrition</h2>
                    <h5>Calories: <%=recipe.calories%> | 
                    Carbs: <%=recipe.carb%> |
                    Protein: <%=recipe.protein%> | 
                    Fat: <%=recipe.fat%> </h5>
                </div>
            
            </div>
            
            <div class="col-md-5">
             <div class="jumbotron-content" style="background:transparent;">
             <h2>Instructions</h2>
                <h5 class="text-left"><i class="fa fa-star" aria-hidden="true"></i> <%=recipe.step1%></h5>
                <h5 class="text-left"><i class="fa fa-star" aria-hidden="true"></i> <%=recipe.step2%></h5>
                <h5 class="text-left"><i class="fa fa-star" aria-hidden="true"></i> <%=recipe.step3%></h5>
                <h5 class="text-left"5><i class="fa fa-star" aria-hidden="true"></i> <%=recipe.step4%></h5>
                <h5 class="text-left"><i class="fa fa-star" aria-hidden="true"></i> <%=recipe.step5%></h5>
                <% if (recipe.step6) { %>
                    <h5 class="text-left"><i class="fa fa-star" aria-hidden="true"></i> <%=recipe.step6%></h5>
                <% } %>
                <% if (recipe.step7) { %>
                    <h5 class="text-left"><i class="fa fa-star" aria-hidden="true"></i> <%=recipe.step7%></h5>
                <% } %>
            </div>
            
            </div>
            
            </div>
        

    
    <!--button row-->
    
    <div class="row btn-row text-left ui raised segment">
        <a href="/bulletin-board">
             <button class="circular ui icon button">
                  <i class="fa fa-arrow-left" aria-hidden="true"></i> Go Back
             </button>
        </a>
        <a href="/recipes/<%=recipe._id %>/edit">
            <button class="circular ui icon button">
              <i class="fa fa-pencil" aria-hidden="true"></i> Edit
             </button>
        </a>
        <form method="post" action="/recipes/<%=recipe._id%>?_method=DELETE" class="pull-right">
            <button class="circular ui icon button"><i class="fa fa-times" aria-hidden="true"></i> Delete</button>
        </form>


    </div>
    
    <!--comments section-->
    
    <div class="ui comments">
          <h3 class="ui dividing header">Comments</h3>
        
        <div class="row">
            <a href="/recipes/<%=recipe.id%>/comments/new"><button class="ui big inverted red button">Add Comment</button></a>

         <div class="comment-container">
        
        <% recipe.comments.forEach(function(comment) { %>
        
                  <div class="comment">
                    <a class="avatar">
                      <img src="https://pbs.twimg.com/profile_images/633817680286384128/TMHEs83b.jpg">
                    </a>
                    <div class="content">
                      <span class="author"><%= comment.author.username%></span>
                      <div class="metadata">
                        <span class="date">Today</span>
                      </div>
                      <div class="text">
                        <%=comment.text%>
                      </div>
                      <div class="actions">
                        <a class="reply">Reply</a>
                      </div>
                    </div>
                  </div>
                  <hr>
        
            <!--<p><strong></strong> - </p>-->
        <% }) %>
        </div>
    
</div>

</div>

</div>


<% include /partials/footer %>