<% include /partials/header %>

<h1 class="page-header">this is the index page</h1>

<div class="container">
    <div class="row">

<% recipes.forEach(function(recipe) { %>
        
    <div class="thumbnail">
        <img src="<%= recipe.image %>">
        <div class="caption">
            <h2><%= recipe.title %></h2>
            <p><%= recipe.instructions %></p>
            <a href="/recipes/<%=recipe._id%>">link</a>
        </div>
    </div>
        
<% }); %>

    </div>
</div>

<% include /partials/footer %>