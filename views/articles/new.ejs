<style>
body {
    background: linear-gradient(to left, #f46b45 , #eea849);
}
</style>

<div class="unpadded-overlay" style="padding-top:8%">

    <div class="container text-left">
    <form method="post" action="/bulletin-board/articles">
      <div class="row">
                <h1>Create New Article</h1>

                <div class="form-group">
                    <label>Title</label>
                        <input type="text" class="form-control" placeholder="title" name="article[title]">
                </div>
            
                <div class="row">
                    <label>Summary</label>
                        <textarea class="form-control" rows="1" placeholder="One Sentence Summary......" name="article[summary]"></textarea>
                </div>
                        
                <div class="row">
                    <label>Body</label>
                        <textarea class="form-control" rows="6" placeholder="type comments/information/instructions here......" name="article[body]"></textarea>
                </div>
            
                <div class="row">
                    <button class="ui big inverted button" style="margin-bottom:20px">Create!</button>
                </div>
        </form>
            
            </div>
