<% include /partials/header %>

<div class="container content-container">
    <div class="jumbotron">
        <h1><%=article.title%></h1>
        <h4 class="text-right"><em>Submitted By:  <%=article.author.username%></em></h4>
    </div>
    
    <%-article.body%>

    <div class="row">
        <a href="/bulletin-board"><button class="circular ui icon button"><i class="fa fa-arrow-left" aria-hidden="true"></i> Go Back</button></a>
        
        <!--if user owns article, edit and delete forms show-->
        <% if(currentUser.username == article.author.username) { %>
          <a href="/articles/all/<%=article._id%>/edit"><button class="circular ui icon button"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</button></a>
          <form method="post" action="/articles/all/<%=article._id%>?_method=DELETE" class="pull-right">
                 <button class="circular ui icon button"><i class="fa fa-times" aria-hidden="true"></i> Delete</button>
          </form>
        <% } %>
    </div>
        <div class="ui comments">
          <h3 class="ui dividing header">Comments</h3>

        <div class="row">
            <a href="/articles/all/<%=article.id%>/comments/new"><button class="ui big red button">Add Comment</button></a>
        </div>
        
        
        
        <div class="comment-container">
        
        <% article.comments.forEach(function(comment) { %>
        
                  <div class="comment">
                    <a class="avatar">
                      <img src="https://pbs.twimg.com/profile_images/633817680286384128/TMHEs83b.jpg">
                    </a>
                    <div class="content">
                      <span class="author"><%= comment.author.username%></span>
                      <div class="metadata">
                        <span class="date">Today</span>
                      </div>
                      <div class="text">
                        <%=comment.text%>
                      </div>
                      <div class="actions">
                        <a class="reply">Reply</a>
                      </div>
                    </div>
                  </div>
                  <hr>
        
            <!--<p><strong></strong> - </p>-->
        <% }) %>
        </div>

</div>

<% console.log(article) %>



<% include /partials/footer %>
