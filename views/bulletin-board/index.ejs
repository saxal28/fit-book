<% include partials/header %>

<style>
    .row {
        padding-right:15px;
    }
    
    .overlay {
        padding-top:8%;
    }
    
    .col-md-4, .col-md-6 {
         padding: 20px;
    } 
</style>

<div class="jumbotron" style="margin-bottom:0px">
    <h1>Bulletin Board</h1>
    <h3>Post Bulletins or Snag other Bulletins and add them to Your Board!</h3>
    <a href="/hq" class="btn btn-primary btn-lg" style="margin-top:20px">Go To HQ</a>
</div>


    <div class="bulletin-navbar">
        <!--article dropdown-->
        <span class="dropdown">
          <button class="ui big inverted button dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
               <i class="fa fa-book bulletin-navbar-icons" aria-hidden="true"></i>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href="/bulletin-board/articles/new">Create New Article</a></li>
            <li><a href="/bulletin-board/articles">Just View Articles</a></li>
          </ul>
        </span>
        <!--recipe dropdown-->
        <span class="dropdown">
          <button class="ui big inverted button dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <i class="fa fa-cutlery bulletin-navbar-icons" aria-hidden="true"></i>
            <!--<span class="caret"></span>-->
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a class="dropdown-list-item" href="/bulletin-board/recipes/new">Create New Recipe</a></li>
            <li><a class="dropdown-list-item" href="/bulletin-board/recipes">Just View Recipes</a></li>
          </ul>
        </span>
        <!--question dropdown-->
        <span class="dropdown">
          <button class="ui big inverted button dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <i class="fa fa-question bulletin-navbar-icons" aria-hidden="true"></i>
            <!--<span class="caret"></span>-->
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href="/bulletin-board/questions/new">Ask A Question</a></li>
            <li><a href="/bulletin-board/questions">Just View Questions</a></li>
          </ul>
        </span>
        <!--motivation dropdown-->
        <span class="dropdown">
          <button class="ui big inverted button dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
           <i class="fa fa-rocket bulletin-navbar-icons" aria-hidden="true"></i>
            <!--<span class="caret"></span>-->
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href="/bulletin-board/motivation/new">Post Motivation</a></li>
            <li><a href="/bulletin-board/motivation">Just View Motivation</a></li>
          </ul>
        </span>
    </div>

<div class="container">
<div class="row text-center">

<% article.forEach(function(article) { %>

<div class="col-md-4">
    

<!--articles-->
<div class="thumbnail board-thumbnail">
      <div class="thumbnail-image">
          <div class="no-padding-overlay bulletin">
                 <div class="row thumbnail-button-row" style="background:transparent">
                     <a class="btn btn-xs" href="/bulletin-board/articles/<%=article._id%>">View</a>
                     <!--edit button only shows if user owns post-->
                     <% if (article.author.username == currentUser.username ) { %>
                         <a class="btn btn-xs"  href="/bulletin-board/articles/<%=article._id%>/edit">Edit</a>
                            <form method="post" action="/bulletin-board/articles/<%=article._id%>?_method=DELETE" class="pull-right" style="margin-left:5px">
                                <button class="btn btn-xs">X</button>
                            </form>
                     <% } %>
                </div>
                <!--favorite button-->
                <!--<%  %>-->
                <!--    <script>-->
                <!--        $(".favorite").on("click",function() { -->
                <!--            $(this).children().css("color","red");-->
                <!--            console.log(article);-->
                <!--        });-->
                <!--    </script>-->
                <!--<% %>-->
                <div class="row thumbnail-button-row">
                    <button class="btn favorite"><i class="fa fa-heart" aria-hidden="true"></i></button>
                </div>
          </div>
      </div>
        <h3><%=article.title%></h3>
        <p><%=article.summary%></p>
        <p class="text-right" style="padding-right:20px; padding-bottom:10px">author: <strong><%=article.author.username%></strong></p>
      </div>
    </div>
    
<% }) %>


<!--recipes-->
<% recipe.forEach(function(recipe) { %>

<div class="col-md-6">

<!--recipes-->
<div class="thumbnail board-thumbnail">
      <div class="thumbnail-image" style="background:url(<%=recipe.image%>); background-size:cover; background-position:center; height:100%">
          <div class="no-padding-overlay bulletin">
               <div class="row thumbnail-button-row" style="background:transparent">
                 <a class="btn btn-xs btn-primary"  href="/bulletin-board/recipes/<%=recipe._id%>">View</a>
                 <% if (recipe.author.username == currentUser.username ) { %>
                     <a class="btn btn-xs btn-primary" href="/bulletin-board/recipes/<%=recipe._id%>/edit">Edit</a>
                     <form method="post" action="/bulletin-board/recipes/<%=recipe._id%>?_method=DELETE" class="pull-right" style="margin-left:5px">
                        <button class="btn btn-xs btn-primary" >X</button>
                    </form>
                <% } %>
            </div>
            <h3 style=""><%=recipe.title%></h3>
            <h5 style=""><%=recipe.summary%></h5>
           
          </div>
      </div>
    </div>
    
    </div>

<% }) %>

<!--questions-->
<% question.forEach(function(question) { %>

<div class="col-md-4">


<div class="thumbnail board-thumbnail">
      <div class="thumbnail-image" style="background:url(https://hd.unsplash.com/photo-1458419948946-19fb2cc296af); background-size:cover; background-position:center">
          <div class="no-padding-overlay bulletin" >
                <div class="row thumbnail-button-row" style="background:transparent">
                     <a class="btn btn-xs" href="/bulletin-board/questions/<%=question._id%>">View</a>
                     <% if (question.author.username == currentUser.username ) { %>
                         <a class="btn btn-xs" href="/bulletin-board/questions/<%=question._id%>/edit">Edit</a>
                    <% } %>
                </div>
          </div>
      </div>
      <div class="caption">
        <h3><%=question.title%></h3>
        <p><%=question.summary%></p>
        <p class="text-right" style="padding-right:20px; padding-bottom:14px; padding-top:14px">author: <strong><%=question.author.username%></strong></p>
      </div>
    </div>
    
    </div>

<% }) %>


<!--motivation-->

<% motivation.forEach(function(motivation) { %>

<div class="col-md-6">
<div class="thumbnail board-thumbnail">
      <div class="thumbnail-image" style="background:url(<%=motivation.image%>); background-size:cover; background-position:center; height:100%">
          <div class="overlay bulletin" style="background:transparent; padding:0px">
            <div class="row thumbnail-button-row" style="background:transparent">
                 <a class="btn btn-xs btn-primary" href="/bulletin-board/motivation/<%=motivation._id%>">View</a>
                 <% if (motivation.author.username == currentUser.username ) { %>
                  <a class="btn btn-xs btn-primary" href="/bulletin-board/motivation/<%=motivation._id%>/edit">Edit</a>
                     <form method="post" action="/bulletin-board/recipes/<%=motivation._id%>?_method=DELETE" class="pull-right" style="margin-left:5px">
                        <button class="btn btn-xs btn-primary">X</button>
                    </form>
                <% } %>
            </div>
          </div>
      </div>
    </div>
    
    </div>

<% }) %>

</div>

